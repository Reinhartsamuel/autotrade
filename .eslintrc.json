{
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "detect"  // Automatically detect the react version
      }
    },
    "rules": {
      "react/jsx-fragments": ["error", "syntax"]  // Enforce shorthand syntax for React fragments
    }
  }